<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4DB1B0B0"
        android:padding="10dp"
        android:text="Mobi 50"
        android:textColor="#000"
        android:textSize="22sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/title_dialog"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/share"
        android:padding="10dp"
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/close"
        app:layout_constraintTop_toTopOf="@id/title_dialog"
        app:layout_constraintBottom_toBottomOf="@id/title_dialog"
        android:src="@drawable/ic_share" />

    <ImageButton
        android:id="@+id/close"
        android:padding="10dp"
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/title_dialog"
        app:layout_constraintBottom_toBottomOf="@id/title_dialog"
        android:src="@drawable/ic_clear"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/title_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="oylik bepul paketlar"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:paddingBottom="10dp"
        app:layout_constraintLeft_toLeftOf="@id/title_dialog"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/title_dialog" />

    <ImageButton
        style="@style/DotStyle"
        android:id="@+id/dot_1"
        app:layout_constraintLeft_toLeftOf="@id/title_2"
        app:layout_constraintTop_toBottomOf="@id/title_2" />

    <TextView
        android:id="@+id/inf_1"
        style="@style/TextStyle"
        android:text="vip"
        app:layout_constraintLeft_toRightOf="@id/dot_1"
        app:layout_constraintTop_toTopOf="@id/dot_1"
        app:layout_constraintBottom_toBottomOf="@id/dot_1" />

    <TextView
       style="@style/TextStyleSimple"
        android:text="tarmoq ichida chiqish qong'iroqlari"
        app:layout_constraintLeft_toRightOf="@id/inf_1"
        app:layout_constraintTop_toTopOf="@id/dot_1"
        app:layout_constraintBottom_toBottomOf="@id/dot_1" />
    <ImageButton
        style="@style/DotStyle"
        android:id="@+id/dot_2"
        android:background="@android:color/transparent"
        app:layout_constraintLeft_toLeftOf="@id/title_2"
        app:layout_constraintTop_toBottomOf="@id/dot_1" />

    <TextView
        android:id="@+id/inf_2"
        style="@style/TextStyle"
        android:text="1,500"
        app:layout_constraintLeft_toRightOf="@id/dot_1"
        app:layout_constraintTop_toTopOf="@id/dot_2"
        app:layout_constraintBottom_toBottomOf="@id/dot_2" />

    <TextView
      style="@style/TextStyleSimple"
        android:text="daqiqa O'zbekiston bo'ylab chiquvchi \nqo'ng'iroqlarga"
        app:layout_constraintLeft_toRightOf="@id/inf_2"
        app:layout_constraintTop_toTopOf="@id/dot_2"
        app:layout_constraintBottom_toBottomOf="@id/dot_2" />
    <ImageButton
        style="@style/DotStyle"
        android:id="@+id/dot_3"
        app:layout_constraintLeft_toLeftOf="@id/dot_2"
        app:layout_constraintTop_toBottomOf="@id/dot_2" />

    <TextView
        android:id="@+id/inf_3"
        style="@style/TextStyle"
        android:text="8,000"
        app:layout_constraintLeft_toRightOf="@id/dot_3"
        app:layout_constraintTop_toTopOf="@id/dot_3"
        app:layout_constraintBottom_toBottomOf="@id/dot_3" />

    <TextView
      style="@style/TextStyleSimple"
        android:text="Mb mobil internet"
        app:layout_constraintLeft_toRightOf="@id/inf_3"
        app:layout_constraintTop_toTopOf="@id/dot_3"
        app:layout_constraintBottom_toBottomOf="@id/dot_3" />
    <ImageButton
        style="@style/DotStyle"
        android:id="@+id/dot_4"
        app:layout_constraintLeft_toLeftOf="@id/dot_3"
        app:layout_constraintTop_toBottomOf="@id/dot_3" />

    <TextView
        android:id="@+id/inf_4"
        style="@style/TextStyle"
        android:text="1,500"
        app:layout_constraintLeft_toRightOf="@id/dot_4"
        app:layout_constraintTop_toTopOf="@id/dot_4"
        app:layout_constraintBottom_toBottomOf="@id/dot_4" />

    <TextView
        style="@style/TextStyleSimple"
        android:text="SMS xabarlar"
        app:layout_constraintLeft_toRightOf="@id/inf_4"
        app:layout_constraintTop_toTopOf="@id/dot_4"
        app:layout_constraintBottom_toBottomOf="@id/dot_4" />
    <TextView
        android:id="@+id/title_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="bepul paketlar limitdan oshganda"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:paddingBottom="10dp"
        app:layout_constraintLeft_toLeftOf="@id/title_dialog"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/dot_4" />
    <ImageButton
        style="@style/DotStyle"
        android:id="@+id/dot_5"
        app:layout_constraintLeft_toLeftOf="@id/title_3"
        app:layout_constraintTop_toBottomOf="@id/title_3" />

    <TextView
        android:id="@+id/inf_5"
        style="@style/TextStyle"
        android:text="84.2"
        app:layout_constraintLeft_toRightOf="@id/dot_5"
        app:layout_constraintTop_toTopOf="@id/dot_5"
        app:layout_constraintBottom_toBottomOf="@id/dot_5" />

    <TextView
      style="@style/TextStyleSimple"
        android:text="so'm tarmoq ichida va O'zbekistonning\nboshqa mobil operatorlari, shahar telefon\nraqamlariga"
        app:layout_constraintLeft_toRightOf="@id/inf_5"
        app:layout_constraintTop_toTopOf="@id/dot_5"
        app:layout_constraintBottom_toBottomOf="@id/dot_5" />
    <ImageButton
        style="@style/DotStyle"
        android:id="@+id/dot_6"
        app:layout_constraintLeft_toLeftOf="@id/title_3"
        app:layout_constraintTop_toBottomOf="@id/dot_5" />

    <TextView
        android:id="@+id/inf_6"
        style="@style/TextStyle"
        android:text="84.2"
        app:layout_constraintLeft_toRightOf="@id/dot_6"
        app:layout_constraintTop_toTopOf="@id/dot_6"
        app:layout_constraintBottom_toBottomOf="@id/dot_6" />

    <TextView
        style="@style/TextStyleSimple"
        android:text="so'm chiquvchi SMS xabarlar barcha mobil \noperatorlarga"
        app:layout_constraintBottom_toBottomOf="@id/dot_6"
        app:layout_constraintLeft_toRightOf="@id/inf_6"
        app:layout_constraintTop_toTopOf="@id/dot_6" />

    <ImageButton
        style="@style/DotStyle"
        android:id="@+id/dot_7"
        app:layout_constraintLeft_toLeftOf="@id/dot_6"
        app:layout_constraintTop_toBottomOf="@id/dot_6" />

    <TextView
        android:id="@+id/inf_7"
        style="@style/TextStyle"
        android:text="631.5"
        app:layout_constraintLeft_toRightOf="@id/dot_7"
        app:layout_constraintTop_toTopOf="@id/dot_7"
        app:layout_constraintBottom_toBottomOf="@id/dot_7" />

    <TextView
       style="@style/TextStyleSimple"
        android:text="so'm chiquvchi xalqaro SMS xabarlari"
        app:layout_constraintLeft_toRightOf="@id/inf_7"
        app:layout_constraintTop_toTopOf="@id/dot_7"
        app:layout_constraintBottom_toBottomOf="@id/dot_7" />
    <ImageButton
        style="@style/DotStyle"
        android:id="@+id/dot_8"
        app:layout_constraintLeft_toLeftOf="@id/dot_7"
        app:layout_constraintTop_toBottomOf="@id/dot_7" />

    <TextView
        android:id="@+id/inf_8"
        style="@style/TextStyle"
        android:text="421.04"
        app:layout_constraintLeft_toRightOf="@id/dot_8"
        app:layout_constraintTop_toTopOf="@id/dot_8"
        app:layout_constraintBottom_toBottomOf="@id/dot_8" />

    <TextView
       style="@style/TextStyleSimple"
        android:text="so'm 1 Mb internet trafik uchun"
        app:layout_constraintLeft_toRightOf="@id/inf_8"
        app:layout_constraintTop_toTopOf="@id/dot_8"
        app:layout_constraintBottom_toBottomOf="@id/dot_8" />
    <Button
        android:id="@+id/but"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="tarifga o'tish"
        android:textColor="#CC000000"
        android:background="#4D0D47A1"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dot_8"
        android:layout_marginTop="10dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>